<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="IcatuzinhoApp.LoginPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:artina="clr-namespace:UXDivers.Artina.Shared;assembly=UXDivers.Artina.Shared"
             xmlns:local="clr-namespace:IcatuzinhoApp;assembly=IcatuzinhoApp"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             BackgroundColor="Black"
             BackgroundImage="{StaticResource PasswordRecoveryBackgroundImage}"
             Padding="20">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BooleanTriggerConverter x:Key="dataHasBeenEntered" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView Orientation="Vertical">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackLayout Grid.Row="0"
                             HorizontalOptions="FillAndExpand"
                             VerticalOptions="CenterAndExpand">

                    <Image HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Source="{StaticResource BrandImage}" />

                    <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <FormattedString.Spans>
                                    <Span FontAttributes="Bold"
                                          FontSize="28"
                                          ForegroundColor="White"
                                          Text="Icatuzinho" />
                                </FormattedString.Spans>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </StackLayout>

                <Grid Grid.Row="1"
                      VerticalOptions="CenterAndExpand"
                      ColumnSpacing="0"
                      Padding="0"
                      RowSpacing="0">

                    <Grid.RowSpacing>
                        <OnPlatform x:TypeArguments="x:Double"
                                    Android="20"
                                    iOS="35" />
                    </Grid.RowSpacing>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackLayout Grid.Row="0">
                        <Entry x:Name="entryEmail"
                               IsEnabled="{Binding EmailIsEnabled}"
                               Keyboard="Email"
                               Placeholder="E-mail"
                               Style="{DynamicResource ArtinaLoginEntryStyle}"
                               Text="{Binding Email}" />
                    </StackLayout>

                    <StackLayout Grid.Row="1">
                        <Entry x:Name="entryPassword"
                               IsEnabled="{Binding PasswordIsEnabled}"
                               IsPassword="true"
                               Keyboard="Default"
                               Placeholder="Senha"
                               Style="{DynamicResource ArtinaLoginEntryStyle}"
                               Text="{Binding Password}" />
                    </StackLayout>

                    <StackLayout Grid.Row="2">
                        <Button VerticalOptions="End"
                                Command="{Binding Confirm}"
                                Style="{DynamicResource PrimaryActionButtonStyle}"
                                Text="Entrar" />
                    </StackLayout>
                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>